<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    height="{Long}600"
    title="Eloqua Form Editor"
    width="{Long}900"
    xtype="dialog">
    <items
    	jcr:primaryType="cq:TabPanel"
    	xtype="tabpanel">
    	<items jcr:primaryType="cq:WidgetCollection">
    		<propsPanel
		    	jcr:primaryType="cq:Panel"
		    	title="Form Properties"
		    	xtype="panel">
		    		<items jcr:primaryType="cq:WidgetCollection">
				    	<eloquaFormName
				            jcr:primaryType="cq:Widget"
				            fieldLabel="eloquaFormName"
				            fieldDescription="The unique Eloqua Form Name. This is used to track in SiteCatalyst."
							allowBlank="{Boolean}false"
				            name="./eloquaFormName"
				            xtype="textfield"/>
				       	<eloquaFormType
				            jcr:primaryType="cq:Widget"
				            fieldLabel="eloquaFormType"
				            fieldDescription="The Eloqua Form Type for this form. This is used to track in SiteCatalyst."
							allowBlank="{Boolean}false"
				            name="./eloquaFormType"
				            xtype="textfield"/>
		            </items>
		    </propsPanel>
    		<contentsPanel
		    	jcr:primaryType="cq:Panel"
		    	title="Form Contents"
		    	xtype="panel">
		    		<items jcr:primaryType="cq:WidgetCollection">
				    	<text
				            jcr:primaryType="cq:Widget"
				            anchor="100% 100%"
				            hideLabel="{Boolean}true"
				            name="./text"
				            xtype="textarea"/>
		            </items>
		    </contentsPanel>
    	</items>
    </items>
</jcr:root>